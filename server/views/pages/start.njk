{% extends "partials/layout.njk" %}

{% set title = __("pages.start.title") %}
{% block pageTitle %}
  Start page template – {{ __("serviceName") }} – GOV.UK Prototype Kit
{% endblock %}

{% block header %}
  <!-- Blank header with no service name for the start page -->
  {{ govukHeader() }}
{% endblock %}

{% block beforeContent %}
  {{ super() }}
  <nav class="govuk-breadcrumbs" aria-label="Breadcrumb">
    <ol class="govuk-breadcrumbs__list">
      <li class="govuk-breadcrumbs__list-item">
        <a class="govuk-breadcrumbs__link" href="#">Home</a>
      </li>
      <li class="govuk-breadcrumbs__list-item" aria-current="page">
        <a class="govuk-breadcrumbs__link" href="#">Get a divorce: step by step</a>
      </li>
    </ol>
  </nav>
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">
        {{ __("pages.start.title") }}
      </h1>

      <p>Contents</p>
      <ul class="govuk-list govuk-list--bullet govuk-list--spaced">
        <li>{{ __("pages.start.contents.makingChildArrangements") }}</li>
        <li><a class="govuk-link" href="#">{{ __("pages.start.contents.getHelpMakingChildArrangements") }}</a></li>
        <li><a class="govuk-link" href="#">{{ __("pages.start.contents.agreeOnChildArrangements") }}</a></li>
        <li><a class="govuk-link" href="#">{{ __("pages.start.contents.agreementThroughMediation") }}</a></li>
        <li><a class="govuk-link" href="#">{{ __("pages.start.contents.otherWaysToAgree") }}</a></li>
        <li><a class="govuk-link" href="#">{{ __("pages.start.contents.CourtOrdersToApply") }}</a></li>
        <li><a class="govuk-link" href="#">{{ __("pages.start.contents.applyCourtOrder") }}</a></li>
        <li><a class="govuk-link" href="#">{{ __("pages.start.contents.afterApplyCourtOrder") }}</a></li>
        <li><a class="govuk-link" href="#">{{ __("pages.start.contents.enforceOrder") }}</a></li>
      </ul>

      <hr>

      <h1 class="govuk-heading-xl">{{ __("pages.start.childArrangements.title") }}</h1>

      {{ __("pages.start.childArrangements.content") | safe }}

      {{ __("pages.start.childArrangements.contentInset") | safe }}

      <h2 class="govuk-heading-m">
        {{ __("pages.start.childArrangements.unsureToMakeChildArrangements.title") }}
      </h2>

      {{ __("pages.start.childArrangements.unsureToMakeChildArrangements.content") | safe }}

      <h2 class="govuk-heading-m">
        {{ __("pages.start.childArrangements.partnerAgreement.title") }}
      </h2>

      {{ __("pages.start.childArrangements.partnerAgreement.content") | safe }}

      <h2 class="govuk-heading-m">
        {{ __("pages.start.childArrangements.getHelpWithoutGoingToCourt.title") }}
      </h2>

      {{ __("pages.start.childArrangements.getHelpWithoutGoingToCourt.content") | safe }}

      <h2 class="govuk-heading-m">
        {{ __("pages.start.childArrangements.cannotAgreeOnEverything.title") | safe }}
      </h2>

      {{ __("pages.start.childArrangements.cannotAgreeOnEverything.content") | safe }}

    </div>
  </div>

{% endblock %}
