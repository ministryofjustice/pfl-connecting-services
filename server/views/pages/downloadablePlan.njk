    /* GDS Form group */
    .govuk-form-group {
      margin-bottom: 20px;
    }

    /* GDS Label */
    .govuk-label {
      display: block;
      font-weight: 400;
      margin-bottom: 5px;
      color: #0b0c0c;
    }

    /* GDS Textarea */
    .govuk-textarea {
      width: 100%;
      min-height: 80px;
      padding: 5px;
      border: 2px solid #0b0c0c;
      font-family: "GDS Transport", Arial, sans-serif;
      font-size: 19px;
      line-height: 1.25;
      resize: vertical;
      box-sizing: border-box;
    }

    .govuk-textarea:focus {
      outline: 3px solid #ffdd00;
      outline-offset: 0;
      box-shadow: inset 0 0 0 2px;
    }

    /* Legacy class support */
    .user-input-area {
      width: 100%;
      min-height: 80px;
      padding: 5px;
      border: 2px solid #0b0c0c;
      font-family: "GDS Transport", Arial, sans-serif;
      font-size: 19px;
      line-height: 1.25;
      resize: vertical;
      box-sizing: border-box;
    }

    .user-input-area:focus {
      outline: 3px solid #ffdd00;
      outline-offset: 0;
      box-shadow: inset 0 0 0 2px;
    }

    /* GDS Fieldset */
    .govuk-fieldset {
      border: 0;
      margin: 0;
      padding: 0;
      min-width: 0;
    }

    .govuk-fieldset__legend {
      display: block;
      font-weight: 400;
      margin-bottom: 10px;
      color: #0b0c0c;
    }

    .govuk-fieldset__legend--s {
      font-size: 19px;
      font-weight: 700;
    }

    /* GDS Checkboxes */
    .govuk-checkboxes {
      margin-bottom: 0;
    }

    .govuk-checkboxes__item {
      display: block;
      position: relative;
      min-height: 40px;
      margin-bottom: 10px;
      padding-left: 40px;
      clear: left;
    }

    .govuk-checkboxes__input {
      cursor: pointer;
      position: absolute;
      z-index: 1;
      top: -2px;
      left: -2px;
      width: 44px;
      height: 44px;
      margin: 0;
      opacity: 0;
    }

    .govuk-checkboxes__label {
      display: inline-block;
      margin-bottom: 0;
      padding: 8px 15px 5px;
      cursor: pointer;
      touch-action: manipulation;
    }

    .govuk-checkboxes__label::before {
      content: "";
      box-sizing: border-box;
      position: absolute;
      top: 0;
      left: 0;
      width: 40px;
      height: 40px;
      border: 2px solid currentcolor;
      background: transparent;
    }

    .govuk-checkboxes__label::after {
      box-sizing: border-box;
      content: "";
      position: absolute;
      top: 11px;
      left: 9px;
      width: 23px;
      height: 12px;
      transform: rotate(-45deg);
      border: solid;
      border-width: 0 0 5px 5px;
      border-top-color: transparent;
      opacity: 0;
      background: transparent;
    }

    .govuk-checkboxes__input:checked + .govuk-checkboxes__label::after {
      opacity: 1;
    }

    .govuk-checkboxes__input:focus + .govuk-checkboxes__label::before {
      border-width: 4px;
      outline: 3px solid transparent;
      outline-offset: 1px;
      box-shadow: 0 0 0 3px #ffdd00;
    }

    .govuk-checkboxes--small .govuk-checkboxes__item {
      min-height: 0;
      margin-bottom: 0;
      padding-left: 34px;
      float: left;
    }

    .govuk-checkboxes--small .govuk-checkboxes__input {
      left: -5px;
      width: 34px;
      height: 34px;
    }

    .govuk-checkboxes--small .govuk-checkboxes__label {
      padding: 6px 30px 5px 5px;
    }

    .govuk-checkboxes--small .govuk-checkboxes__label::before {
      width: 24px;
      height: 24px;
      top: 6px;
    }

    .govuk-checkboxes--small .govuk-checkboxes__label::after {
      width: 13.5px;
      height: 7px;
      top: 14px;
      left: 5.5px;
      border-width: 0 0 3px 3px;
    }

    /* Answer sections */
    .answer-section {
