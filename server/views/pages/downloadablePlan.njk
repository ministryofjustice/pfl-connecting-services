      color: #1d70b8;
      text-decoration: underline;
    }

    a:hover {
      color: #003078;
    }

    a:visited {
      color: #4c2c92;
    }

    /* Lists */
    ul, ol {
      margin: 0 0 20px 0;
      padding-left: 20px;
    }

    li {
      margin-bottom: 10px;
    }

    /* Text box component */
    .text-box {
      border: 2px solid #0b0c0c;
      padding: 15px;
      margin: 20px 0;
      background-color: #f3f2f1;
    }

    .text-box h3,
