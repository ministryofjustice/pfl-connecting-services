{% extends "partials/layout.njk" %}
{% from "govuk/components/exit-this-page/macro.njk" import govukExitThisPage %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title = __("pages.domesticAbuse.title") %}
{% block pageTitle %}
  {{ title }} – {{ __("serviceName") }} – GOV.UK
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% include "partials/errorSummary.njk" %}

      <form class="form" action="{{ paths.DOMESTIC_ABUSE }}" method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

        <h1 class="govuk-heading-l">
          {{ __("pages.domesticAbuse.heading") }}
        </h1>

        <p>
          {{ __("pages.domesticAbuse.intro") }}
        </p>

        <ul class="govuk-list govuk-list--bullet">
          <li>{{ __("pages.domesticAbuse.bullets.violence") }}</li>
          <li>{{ __("pages.domesticAbuse.bullets.financial") }}</li>
          <li>{{ __("pages.domesticAbuse.bullets.coercive") }}</li>
          <li>{{ __("pages.domesticAbuse.bullets.childAbuse") }}</li>
          <li>{{ __("pages.domesticAbuse.bullets.harassment") }}</li>
          <li>{{ __("pages.domesticAbuse.bullets.psychological") }}</li>
        </ul>

        {{ govukRadios({
          name: formFields.ABUSE,
          fieldset: {
            legend: {
              isPageHeading: true,
              classes: "govuk-fieldset__legend--m"
            }
          },
          errorMessage: errors | findError(formFields.ABUSE) if errors else null,
          items: [
            {
              value: "yes",
              text: __("yes") if __("yes") else "Yes"
            },
            {
              value: "no",
              text: __("no") if __("no") else "No"
            }
          ]
        }) }}

        {{ govukButton({
          text: __("continue")
        }) }}

      </form>

    </div>
    <div class="govuk-grid-column-one-third">
      {{ govukExitThisPage() }}
    </div>
  </div>

{% endblock %}
