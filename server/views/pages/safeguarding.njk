{% extends "partials/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/exit-this-page/macro.njk" import govukExitThisPage %}

{% block pageTitle %}
  {{ __("pages.safeguarding.title") }} – {{ __("serviceName") }} – GOV.UK
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">
        {{ __("pages.safeguarding.title") }}
      </h1>

      <p>
        {{ __("pages.safeguarding.content.description") }}
      </p>

      {{ govukWarningText({
        text: __("pages.safeguarding.content.warningText"),
        iconFallbackText: "Warning"
      }) }}
      
      <h2 class="govuk-heading-m">
        {{ __("pages.safeguarding.content.wantToContinue.title") }}
      </h2>

      <p>
        {{ __("pages.safeguarding.content.wantToContinue.description") }}
      </p>

      {{ govukButton({
        text: "Continue",
        href: paths.CONTACT_CHILD_ARRANGEMENTS,
        classes: "govuk-button--primary"
      }) }}

      <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

      <h2 class="govuk-heading-m">
        {{ __("pages.safeguarding.content.getHelpProtecting.title") }}
      </h2>
      <p>
        {{ __("pages.safeguarding.content.getHelpProtecting.content.domesticAbuse") | safe }}
      </p>
      <p>
        {{ __("pages.safeguarding.content.getHelpProtecting.content.citizensAdvice") | safe }}
      </p>
      <p>
        {{ __("pages.safeguarding.content.getHelpProtecting.content.findOut") | safe }}
      </p>
      <p>
        {{ __("pages.safeguarding.content.getHelpProtecting.content.specificHelp") | safe }}
      </p>

      <h2 class="govuk-heading-m">
        {{ __("pages.safeguarding.content.helpAndSupport.title") }}
      </h2>
      <p>
        {{ __("pages.safeguarding.content.helpAndSupport.description") | safe }}
      </p>

      <dl class="govuk-summary-list">
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key govuk-summary-list__key-mediation-width">
          </dt>
          <dd class="govuk-summary-list__value">
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key govuk-summary-list__key-mediation-width">
            {{ __("pages.safeguarding.content.helpAndSupport.table.rowOne.heading") | safe }}
          </dt>
          <dd class="govuk-summary-list__value">
            {{ __("pages.safeguarding.content.helpAndSupport.table.rowOne.data") | safe }}
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key govuk-summary-list__key-mediation-width">
            {{ __("pages.safeguarding.content.helpAndSupport.table.rowTwo.heading") | safe }}
          </dt>
          <dd class="govuk-summary-list__value">
            {{ __("pages.safeguarding.content.helpAndSupport.table.rowTwo.data") | safe }}
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key govuk-summary-list__key-mediation-width">
            {{ __("pages.safeguarding.content.helpAndSupport.table.rowThree.heading") | safe }}
          </dt>
          <dd class="govuk-summary-list__value">
            {{ __("pages.safeguarding.content.helpAndSupport.table.rowThree.data") | safe }}
          </dd>
        </div>
      </dl>
    </div>
    <div class="govuk-grid-column-one-third">
      {{ govukExitThisPage() }}
    </div>
  </div>
{% endblock %}
