{% extends "partials/layout.njk" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ __('pages.cookies.title') }}</h1>

      {{ __('pages.cookies.aboutCookies') | safe }}

      <h2 class="govuk-heading-l">{{ __('pages.cookies.howCookiesAreUsed') }}</h2>

      <h3 class="govuk-heading-m">{{ __('pages.cookies.essentialCookies') }}</h3>

      <p>{{ __('pages.cookies.essentialCookiesUse') }}</p>

      {{ __('pages.cookies.rememberingProgress') | safe }}

      {{
        govukTable({
          head: [
            { text: __('pages.cookies.name') },
            { text: __('pages.cookies.purpose') },
            { text: __('pages.cookies.expires') }
          ],
          rows: [
            [
              { text: cookieNames.SESSION },
              { text: __('pages.cookies.sessionPurpose') },
              { text: __('pages.cookies.sessionExpiry') }
            ]
          ]
        })
      }}

      {% if ga4Id %}

        {{ __('pages.cookies.cookiesMessage') | safe }}

        {{
          govukTable({
            head: [
              { text: __('pages.cookies.name') },
              { text: __('pages.cookies.purpose') },
              { text: __('pages.cookies.expires') }
            ],
            rows: [
              [
                { text: cookieNames.ANALYTICS_CONSENT },
                { text: __('pages.cookies.consentPurpose') },
                { text: __('pages.cookies.consentExpiry') }
              ]
            ]
          })
        }}

        <h3 class="govuk-heading-m">{{ __('pages.cookies.optionalCookies') }}</h3>

        {{ __('pages.cookies.aboutOptionalCookies') | safe }}

        {{
          govukTable({
            head: [
              { text: __('pages.cookies.name') },
              { text: __('pages.cookies.purpose') },
              { text: __('pages.cookies.expires') }
            ],
            rows: [
              [
                { text: "_ga" },
                { text: __('pages.cookies._gaCookiePurpose') },
                { text: __('pages.cookies.gaCookiesExpiry') }
              ],
              [
                { text: "_ga_" + (ga4Id | replace("G-", "")) },
                { text: __('pages.cookies._ga_IdCookiePurpose') },
                { text: __('pages.cookies.gaCookiesExpiry') }
              ]
            ]
          })
        }}

        <form class="form" action="{{ paths.COOKIES }}" method="post" novalidate>
          <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

          {{
            govukRadios({
              classes: "govuk-radios--inline",
              name: formFields.ACCEPT_OPTIONAL_COOKIES,
              fieldset: {
                legend: {
                  text: __('pages.cookies.acceptOptionalCookies'),
                  classes: "govuk-fieldset__legend--s"
                }
              },
              items: [
                {
                  value: "Yes",
                  text: __('yes'),
                  checked: analyticsEnabled
                },
                {
                  value: "No",
                  text: __('no'),
                  checked: false if analyticsEnabled else true
                }
              ]
            })
          }}

          {{ govukButton({text: __('pages.cookies.saveCookieSettings')}) }}
        </form>
      {% endif %}

    </div>
  </div>
{% endblock %}
