    "jest": "29.7.0",
    "jest-html-reporter": "4.1.0",
    "jest-junit": "16.0.0",
    "jsdom": "26.1.0",
    "nodemon": "3.1.10",
    "prettier": "3.5.3",
    "prettier-plugin-jinja-template": "2.1.0",
    "start-server-and-test": "2.0.12",
    "supertest": "7.1.1",
    "ts-jest": "29.3.4",
    "typescript": "5.8.3",
    "typescript-eslint": "8.34.0"
  }
